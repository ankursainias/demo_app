<%= link_to 'All Posts', posts_path %>
<%= form_with(model: post, local: false) do |f| %>

  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category %>
    <%= f.select :category, Post.categories.map { |k, v| [ k.humanize, k ] } %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :contact_details %>
    <%= f.text_field :contact_details %>
  </div>
  <%= f.fields_for :image do |ff| %>
   <%= render "image_fields", f: ff %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
