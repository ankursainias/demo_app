<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= link_to 'New Post', new_post_path %>
<% if @posts.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Category</th>
        <th>Title</th>
        <th>Body</th>
        <th>Contact details</th>
        <th>Email</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.category %></td>
          <td><%= post.title&.truncate(25, separator: '...') %></td>
          <td><%= post.body&.truncate(35, separator: '...') %></td>
          <td><%= post.contact_details&.truncate(25, separator: '...') %></td>
          <td><%= post.email %></td>
          <td>
            <%= link_to 'Comments', post_comments_path(post) %>
            <%= link_to 'Show', post %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table><br />
  <%= will_paginate @posts %>
<% else %>
  <p>No Post Found </p>
<% end %>




