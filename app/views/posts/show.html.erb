<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @post.category %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Contact details:</strong>
  <%= @post.contact_details %>
</p>

<p>
  <strong>Email:</strong>
  <%= @post.email %>
</p>
<% if @post.image&.name.present? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag @post.image.name.url, width: "20%" %>
  </p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
